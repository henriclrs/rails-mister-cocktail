<div class="trompette-banner">
  <h1>Nos cocktails</h1>
</div>


<div class="container" id="home-cocktails">
  <h2 class="text-center">Une envie particuli√®re ?</h2>
  <div class="row">
    <% @cocktails.each do |cocktail|%>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
           <% image_url = "https://source.unsplash.com/featured/300x300/?cocktail,#{cocktail.name}" %>
           <div class="card text-center">
            <img src= <%= image_url%> alt="Cocktail">
            <div class="card-category"></div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
            <%= link_to "Recipe", cocktail_path(cocktail), class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col-xs-12" id="new_cocktail">
      <%= link_to '<i class="fas fa-plus"></i> Add a new cocktail'.html_safe, new_cocktail_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

