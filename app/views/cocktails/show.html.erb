<div class="container">
    <h2><%= @cocktail.name %></h2>
    <hr>
    <div class="ingredient-container">
      <table class="table">
        <thead>
          <tr>
              <th scope="col">#</th>
              <th scope="col">Ingr√©dients</th>
              <th scope="col">Descriptions</th>
              <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @cocktail.ingredients.each_with_index do |ingredient, index| %>
            <% ingredient.doses.each do |dose| %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td class="font-italic"><%= ingredient.name%></td>
                <td class="font-italic"> <%= dose.description%></td>
                <td><%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(id: dose.id, cocktail_id: @cocktail.id),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: "text-center" %></td>

              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <hr>
      <% if !@cocktail.photo.nil? %>
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <% end %>
    </div>
    <hr>
  <%= link_to '<i class="fas fa-plus"></i> Add a dose'.html_safe, new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  <%= link_to '<i class="fas fa-undo-alt"></i> Back'.html_safe, cocktails_path, class: "btn btn-primary" %>
</div>

