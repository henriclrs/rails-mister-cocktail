<div class="container">
  <div class="text-center">
    <h2><%= @cocktail.name %></h2>
    <hr>
    <ul class="list-unstyled">
      <% @cocktail.ingredients.each do |ingredient| %>
      <li>
        <% ingredient.doses.each do |dose| %>
         <%= ingredient.name%> <%= dose.description%> >

         <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, cocktail_dose_path(id: dose.id, cocktail_id: @cocktail.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
        <% end %>
      </li>

    <% end %>
    </ul>

    <hr>
  </div>
  <%= link_to "Back to the list", cocktails_path, class: "btn btn-primary" %>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
</div>
